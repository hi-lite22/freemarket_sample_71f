.whole  
  %h1 
    = image_tag 'logo.png', alt: '', height: '50px', width: '180px', class: '' 
  %h2 会員情報入力
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .logout-content 
      .field
        .field__label
          .field__label--left
            = f.label :ニックネーム
          .field__label--right
            必須
        .field__input
          = f.text_field :nickname, autofocus: true, placeholder: '例) フリマ太郎'
      .field
        .field__label
          .field__label--left
            = f.label :氏名
          .field__label--right
            必須
        .field__input
          .field__input--left
            = f.text_field :family_name, autofocus: true, placeholder: '例) 鈴木'
          .field__input--right
            = f.text_field :first_name, autofocus: true, placeholder: '例) 太郎'
      .field
        .field__label
          .field__label--left
            = f.label :氏名カナ
          .field__label--right
            必須
        .field__input
          .field__input--left
            = f.text_field :family_name_kana, autofocus: true, placeholder: '例) スズキ'
          .field__input--right
            = f.text_field :first_name_kana, autofocus: true, placeholder: '例) タロウ'
      .field
        .field__label
          .field__label--left
            = f.label :生年月日
          .field__label--right
            必須
        .field__input
          = f.text_field :birth_year, autofocus: true, placeholder: '例) 1997/03/10'
      .field
        .field__label
          .field__label--left
            = f.label :メールアドレス
          .field__label--right
            必須
        .field__input
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'PC・携帯どちらでも可'
      .field
        .field__label
          .field__label--left
            = f.label :パスワード
            - if @minimum_password_length
              %em
                (#{@minimum_password_length}文字以上)
            %br/
          .field__label--right
            必須
        .field__input
          = f.password_field :password, autocomplete: "new-password"
      .field
        .field__label
          .field__label--left
            = f.label :確認用パスワード
          .field__label--right
            必須
        .field__input
          = f.password_field :password_confirmation, autocomplete: "new-password"
      .field
        .field__label
          .field__label--left
            = f.label :送付先氏名
          .field__label--right
            必須
        .field__input
          .field__input--left
            = f.text_field :d_family_name, autofocus: true, placeholder: '例) 山田'
          .field__input--right
            = f.text_field :d_first_name, autofocus: true, placeholder: '例) 桜'
      .field
        .field__label
          .field__label--left
            = f.label :氏名カナ
          .field__label--right
            必須
        .field__input
          .field__input--left
            = f.text_field :d_family_name_kana, autofocus: true, placeholder: '例) スズキ'
          .field__input--right
            = f.text_field :d_first_name_kana, autofocus: true, placeholder: '例) タロウ'
      .field
        .field__label
          .field__label--left
            = f.label :郵便番号
          .field__label--right
            必須
        .field__input
          = f.number_field :zip_code, autofocus: true, placeholder: 'ハイフンなし'
      .field
        .field__label
          .field__label--left
            = f.label :都道府県
          .field__label--right
            必須
        .field__input
          = f.text_field :prefecture, autofocus: true, placeholder: '例) 熊本県'
      .field
        .field__label
          .field__label--left
            = f.label :市区町村
          .field__label--right
            必須
        .field__input
          = f.text_field :city, autofocus: true
      .field
        .field__label
          .field__label--left
            = f.label :番地
          .field__label--right
            必須
        .field__input
          = f.text_field :address, autofocus: true, placeholder: ''
      .field
        .field__label
          .field__label--left
            = f.label :建物名
          .field__label--right
            任意
        .field__input
          = f.text_field :apartment, autofocus: true, placeholder: '例) 〇〇マンション××号室'
      .field
        .field__label
          .field__label--left
            = f.label :電話番号
          .field__label--right
            任意
        .field__input
          = f.text_field :apartment, autofocus: true, placeholder: 'ハイフンなし'
      .actions
        = f.submit "登録する" , class: "submit"
  .sign-up__footer 
    .terms
      .terms__content
        = link_to "プライバシーポリシー", "#", class: 'login-btn'
      .terms__content
        = link_to "フリマ利用規約", "#", class: 'login-btn'
      .terms__content
        = link_to "特定商取引に関する表記", "#", class: 'login-btn'
    .image
      = image_tag 'logo.png', alt: '', height: '50px', width: '180px', class: '' 
    
