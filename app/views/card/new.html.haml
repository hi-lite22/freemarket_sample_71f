.wrapper
  = render "items/header"
  .main
    .content
      .content__left
        .content__left__mypage
          %h2.mypage-head 設定
          .content__left__mypage__list
            .content__left__mypage__list__item
              =link_to "クレジットカード登録", new_card_path, method: :get
            .content__left__mypage__list__item
              =link_to "サンプル", "#"
            .content__left__mypage__list__item
              =link_to "サンプル", "#"
            .content__left__mypage__list__item
              =link_to "ログアウト", logout_users_path, method: :get
      .content__right3
        .content__right3__card
          .content__right3__card__headcolor
            %h2.content__right3__card__headcolor__text クレジットカード情報入力
          .content__right3__card__registrationform
            = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm", class:"content__right3__card__registrationform__content") do
              .content__right3__card__registrationform__content__cardnumber
                %label カード番号
                = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                %br
              .content__right3__card__registrationform__content__validexp
                %label 有効期限
                .content__right3__card__registrationform__content__selectwrap
                  %select#exp_month{name: "exp_month", type: "text", class:"content__right3__card__registrationform__content__validexp__selectwrap__exp"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %span 月/
                  %select#exp_year{name: "exp_year", type: "text", class:"content__right3__card__registrationform__content__validexp__selectwrap__exp"}
                    %option{value: ""} --
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %span 年
                %br
              .content__right3__card__registrationform__content__security
                %label セキュリティコード
                = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              .content__right3__card__registrationform__content__btn
                #card_token
                = submit_tag "登録する", id: "token_submit"

  =render "items/footer"

